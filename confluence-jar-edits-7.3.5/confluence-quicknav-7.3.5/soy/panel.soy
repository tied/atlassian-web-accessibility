{namespace Confluence.Templates.QuickNav}

/**
 * Quick nav search panel
 */
{template .panel}
    <form id="quick-search" class="aui-quicksearch dont-default-focus header-quicksearch" action="{contextPath()}/dosearchsite.action" method="get">
            <label for="quick-search-query" class="assistive">{getText('quick.search.legend')}</label>
        <input id="quick-search-query" role="search" class="text app-search search quick-search-query" type="text"
                   accessKey="{getText('quick.search.accesskey')}" autocomplete="off" name="queryString" title="{getText('quick.search.legend')}"
                   placeholder="{getText('quick.search.placeholder')}"/>
        <button id="quick-search-submit" class="quick-search-submit assistive" type="submit" value="{getText('quick.search.submit')}" aria-label="{getText('quick.search.submit')}"></button>
            <div class="aui-dd-parent quick-nav-drop-down"></div>
    </form>
{/template}