<atlassian-plugin key="com.atlassian.confluence.ext.code.custom.${language}.${randomId}"
                  name="Custom Code Macro Highlighting for ${friendlyName} Language" plugins-version="2">
    <plugin-info>
        <description>Automatically generated by the Atlassian Code Macro to install custom syntax highlighting</description>
        <version>1.0</version>
        <vendor name='Atlassian' url='http://www.atlassian.com'/>
        <bundle-instructions>
            <Import-Package>
                org.dom4j*,
            </Import-Package>
        </bundle-instructions>
    </plugin-info>"

    <code-syntax key="custom-code-syntax"
                 class="com.atlassian.confluence.ext.code.descriptor.custom.CustomCodeSyntax"
                 name="Registers a custom code syntax highlighter for ${friendlyName}"
                 friendly-name="${friendlyName}"
                 resource-key="custom-code-syntax-resources"/>

    <web-resource key="custom-code-syntax-resources" name="JavaScript brush for the code macro">
        <resource type="download" name="shLang.js" location="/javascript/shLang.js" />
    </web-resource>
</atlassian-plugin>
